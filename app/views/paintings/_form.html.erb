<%= form_for [@gallery, @painting] do |f| %>
  <% if @painting.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@painting.errors.count, "error")} prohibited this painting from being saved:" %>
      </h2>
      <ul>
        <% @painting.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <%= image_tag @painting.image_url(:thumb) if @painting.image? %>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :remote_image_url, 'or add by URL' %>
    <%= f.url_field :remote_image_url %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
